@model IEnumerable<SDClubs.Models.Artist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MinimumHourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAddress)
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumHourlyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameAddress.NameAddressId)
            </td>
            <td>
                @if (item.NameAddress.FirstName != null && item.NameAddress.LastName != null)
                {
                    @Html.DisplayFor(modelItem => item.NameAddress.LastName)@:, @Html.DisplayFor(modelItem => item.NameAddress.FirstName);
                }
                else if(item.NameAddress.FirstName != null || item.NameAddress.LastName != null)
                {
                    @Html.DisplayFor(modelItem => item.NameAddress.LastName)@Html.DisplayFor(modelItem => item.NameAddress.FirstName);
                }
            </td>
            <td>
                <a asp-controller="SDGroupMember" asp-action="Index" asp-route-id="@item.ArtistId" asp-route-firstName="@item.NameAddress.FirstName" asp-route-lastName="@item.NameAddress.LastName">Group Info</a> |
                <a asp-action="Edit" asp-route-id="@item.ArtistId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArtistId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArtistId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

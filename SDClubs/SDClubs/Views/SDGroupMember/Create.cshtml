@model SDClubs.Models.GroupMember
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Add to "+ Context.Session.GetString("name");
    var date = DateTime.Now;
}

<h1>Add members to @Context.Session.GetString("name")</h1>

<h4>GroupMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-group="@ViewBag.group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ArtistIdGroup" class="control-label"></label>
                <select asp-for="ArtistIdGroup" class="form-control" asp-items="ViewBag.ArtistIdGroup"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArtistIdMember" class="control-label"></label>
                <select asp-for="ArtistIdMember" class="form-control" asp-items="ViewBag.ArtistIdMember"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateJoined" class="control-label"></label>
                <input asp-for="DateJoined" class="form-control" />
                <span asp-validation-for="DateJoined" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateLeft" class="control-label"></label>
                <input asp-for="DateLeft" class="form-control" />
                <span asp-validation-for="DateLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>  --- <a asp-controller="SDArtist" asp-action="Index">Return to Artist Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model SDClubs.Models.GroupMember
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Delete " + ViewBag.memName + " from " + ViewBag.name + "?";
}

<h1>Delete @ViewBag.memName from @ViewBag.name?</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateJoined)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateJoined)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateLeft)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateLeft)
        </dd>
        <dt class="col-sm-2">
            Group
        </dt>
        <dd class="col-sm-10">
            @ViewBag.name
        </dd>
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @ViewBag.memName
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-member="@ViewBag.member" asp-route-group="@ViewBag.group">
        <input type="hidden" asp-for="ArtistIdGroup" />
        <input type="hidden" asp-for="ArtistIdMember" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
